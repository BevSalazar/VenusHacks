<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"

        android:textSize="30sp"
        android:textAlignment="center"
        android:id="@+id/plantName"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imagePic"
        android:layout_gravity="top" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Last Read"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:textStyle="bold"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="0dp">
        <TableRow>
            <TextView
                android:text="PH" android:id="@+id/ph_lab"/>
            <TextView android:id="@+id/d_ph" android:layout_marginLeft="100dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Temperature" android:id="@+id/tempLab"/>
            <TextView android:id="@+id/d_temp" android:layout_marginLeft="100dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Soil Moisture" android:id="@+id/soilLab"/>
            <TextView android:id="@+id/d_soil" android:layout_marginLeft="100dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Light" android:id="@+id/lightLab"/>
            <TextView android:id="@+id/d_light" android:layout_marginLeft="100dp"/>
        </TableRow>
    </TableLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Ideal Measurements"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:textStyle="bold"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
        <TableRow>
            <TextView
                android:text="Maximum PH"/>
            <TextView android:id="@+id/maxPH" android:layout_marginLeft="100dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="Minimum PH"/>
            <TextView android:id="@+id/minPH" android:layout_marginLeft="100dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Maximum Temperature"/>
            <TextView android:id="@+id/maxTemp" android:layout_marginLeft="100dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Minimum Temperature"/>
            <TextView android:id="@+id/minTemp" android:layout_marginLeft="100dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Soil Moisture"/>
            <TextView android:id="@+id/soilMoistrue"
                android:layout_marginLeft="100dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Light"/>
            <TextView android:id="@+id/light"
                android:layout_marginLeft="100dp"/>
        </TableRow>
    </TableLayout>


    <TextView
        android:id="@+id/text_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</LinearLayout>